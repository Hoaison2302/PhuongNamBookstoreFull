<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="170dp"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/iv_sua"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/sua" />

        <ImageView
            android:id="@+id/iv_userpic"
            android:layout_width="50dp"
            android:layout_marginLeft="5dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/userpic" />

        <ImageView
            android:id="@+id/ivthungrac_hoadonnhap"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/thungrac" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:text="Thể loại:"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="75dp" />
        <TextView
            android:id="@+id/tvtheloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:text="Kinh doanh"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="35dp"
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="Tên sách:"
            app:layout_constraintBottom_toTopOf="@+id/tvngaynhap"
            app:layout_constraintStart_toStartOf="@+id/tvngaynhap" />
        <TextView
            android:layout_marginTop="35dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvtensach"
            android:layout_width="wrap_content"
            android:textSize="16dp"

            android:layout_height="wrap_content"
            android:text="Lãnh đạo 4.0"
            app:layout_constraintBottom_toTopOf="@+id/tvngaynhap"
            app:layout_constraintStart_toStartOf="@+id/tvngaynhap" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="75dp"
            android:textSize="16dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày nhập:" />
    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvngaynhap"
        android:textSize="16dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/09/2019" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="82dp"
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:text="Số lương nhập:"
            app:layout_constraintStart_toStartOf="@+id/tvngaynhap"
            app:layout_constraintTop_toBottomOf="@+id/tvngaynhap" />
    <TextView
        android:layout_marginTop="82dp"
        android:layout_marginLeft="5dp"
            android:id="@+id/tvsoluongnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:text="20"
            app:layout_constraintStart_toStartOf="@+id/tvngaynhap"
            app:layout_constraintTop_toBottomOf="@+id/tvngaynhap" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="102dp"
            android:layout_marginLeft="75dp"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá nhập:"
            app:layout_constraintStart_toStartOf="@+id/tvsoluongnhap"
            app:layout_constraintTop_toBottomOf="@+id/tvsoluongnhap" />

        <TextView
            android:layout_marginTop="102dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:id="@+id/tvgianhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá nhập: 55.000 VNĐ"
            app:layout_constraintStart_toStartOf="@+id/tvsoluongnhap"
            app:layout_constraintTop_toBottomOf="@+id/tvsoluongnhap" />
    </LinearLayout>

</androidx.cardview.widget.CardView>